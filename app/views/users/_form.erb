    <div class="column">
      <input type="checkbox" value="8" name="user[interest_ids][]" id="user_interest_ids_8">
      <label for="user_interest_ids_8">Avoiding Death</label>
    </div>
    <div class="column">
      <input type="checkbox" value="9" name="user[interest_ids][]" id="user_interest_ids_9">
      <label for="user_interest_ids_9">People Watching</label>
    </div>
    <div class="column">
      <input type="checkbox" value="10" name="user[interest_ids][]" id="user_interest_ids_10">
      <label for="user_interest_ids_10">Birdbath Bathing</label>
    </div>
  </div>
  <br><br>
  <%= f.label :bio, "Bio:" %>
  <div class="field">
    <%= f.text_area :bio, size: "60x5" %>
  </div>
  <%= f.submit class: "ui positive button" %>
  <% end %>
</div>
