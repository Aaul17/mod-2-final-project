        <label for="user_interest_ids_4">Cave Spelunking</label>
      </div>
      <div class="column">
        <input type="checkbox" value="5" name="user[interest_ids][]" id="user_interest_ids_5">
        <label for="user_interest_ids_5">Skydiving</label>
