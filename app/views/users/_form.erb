      <div class="column">
        <input type="checkbox" value="1" name="user[interest_ids][]" id="user_interest_ids_1">
        <label for="user_interest_ids_1">Basketweaving</label>
      </div>
      <div class="column">
        <input type="checkbox" value="2" name="user[interest_ids][]" id="user_interest_ids_2">
