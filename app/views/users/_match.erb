<%= form_for(current_user.active_relationships.new) do |f| %>
  <div><%= hidden_field_tag :matched_id, @user.id %></div>
    <% if current_user.matchers.find_by(id: @user.id) %>
      <input class="ui basic button" type="submit" name="commit" value="Accept Match" data-disable-with="Accept Match">
    <% else %>
      <input class="ui basic button" type="submit" name="commit" value="Request Match" data-disable-with="Request Match">
    <% end %>
<% end %>
