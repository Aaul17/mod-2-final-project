<h1>Conversation</h1>

<% @messages.each do |message| %>
  <% if message.body %>
   <% user = User.find(message.user_id) %>
    <div class=”item”>
      <div class=”content”>
       <div class=”header”><strong><%= user.username %></strong></div>
        <div class=”list”>
          <div class=”item”>
            <i class=”right triangle icon”></i>
             <%= message.body %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<%= form_for [@conversation, @message] do |f| %>
 <div>
   <%= f.text_area :body %>
 </div>
 <%= f.hidden_field :user_id, value: current_user.id %>
 <div>
   <%= f.submit "Add Reply" %>
 </div>
<% end %>
<br>
<%= button_to "Back to All Conversations", conversations_path, method: :get %>
